{
    "admin": {
        "disabled": true
    },
    "apps": {
        "http": {
            "servers": {
                "proxy": {
                    "listen": [
                        ":80"
                    ],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "Host": [
                                                    "{http.reverse_proxy.upstream.host}"
                                                ]
                                            }
                                        }
                                    },
                                    "transport": {
                                        "protocol": "http"
                                    },
                                    "upstreams": [
                                        {
                                            "dial": "localhost:8000"
                                        }
                                    ]
                                }
                            ],
                            "match": [
                                {
                                    "host": [
                                        "git.com"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}